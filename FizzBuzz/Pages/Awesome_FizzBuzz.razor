@page "/awsom_fizzbuzz"

<h1>Awesome FizzBuzz</h1>

<p>@currentCount</p>

<button1 class="btn btn-primary" @onclick="IncrementCount">Click me</button1>
<button2 class="btn btn-primary" @onclick="Clean">Clean</button2>

@code {
    private string currentCount = "";
    private int counter = 0;


    private void IncrementCount()
    {
        int n = 100;
        counter++;

        if (counter < 7)
        {
            currentCount = "";
            // Loop for 100 times
            for (int i = 1; i <= n; i++)
            {

                // Number divisible by 15(
                // divisible by both 3 & 5),
                // print 'FizzBuzz' in place
                // of the number
                if (i % 15 == 0)
                    currentCount += "FizzBuzz" + " ";

                // Number divisible by 3,
                // print 'Fizz' in place
                // of the number
                else if (i % 3 == 0)
                    currentCount += "Fizz" + " ";

                // Number divisible by
                // 5, print 'Buzz'
                // in place of the number
                else if (i % 5 == 0)
                    currentCount += "Buzz" + " ";

                // Print the numbers
                else
                    currentCount += i + " ";

            }

            currentCount += " .......O my god is incredible, the people goes crazy Haaaa Haaa :)";

        }
        else
            currentCount = "!!!!Pleasee stop You'll make the button explode";

    }

    private void Clean() {
        counter = 0;
        currentCount = "";    
    }
}
